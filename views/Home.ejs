<div class="home-section">
  <div class="left-column">
    <div class="top-row">
      <h2>Discover Sustainable Fashion</h2>
      <p>Discover a world of sustainable fashion and unique vintage treasures at R. Miller.</p>
      <a href="/login">
        <button class="small-btn update-btn">Explore more</button>
      </a>
    </div>
   
  </div>

  <div class="vertical-divider"></div>

  <div class="right-column">
    <img src="../public/images/home2.jpg" alt="Right Image">
  </div>
</div>




<section class="about">
  <h2>About</h2>
  <h5>Our Story</h5>
  <p>At R. Miller, we curate pre-loved apparel and home goods to offer affordable, sustainable fashion choices. Our rotating inventory includes designer clothing, vintage accessories, and charming home d√©cor pieces. Embrace conscious consumption and the beauty of upcycled treasures with us.</p>
  <a href="/about"><button  class="small-btn update-btn">Learn More</button></a>
</section>

<section class="third-left  home-img">
  <img src="../public/images/home1.png" alt="image" class="zoom-image">
</section>

<section class="collection-section">
  <h2>Our Collection Gallery</h2>
  <p>Discover Our Treasures</p>
  <div class="slider-container">
  <div class="slider-track" id="sliderTrack">
    <% data.forEach(product => { %>
      <div class="slider-card">
        <img src="../public/product_image/<%= product.image_url %>" alt="<%= product.name %>" class="slider-img">
        <a href="#home-modal-<%= product.id %>" class="view-btn" data-modal-id="home-modal-<%= product.id %>">Quick view</a>
      </div>
    <% }) %>
  </div>
</div>
<a href="/login" class="shop-btn-link"><button class="small-btn update-btn shop-btn">Shop Now</button></a>
</section>
<% data.forEach(product => { %>
<div id="home-modal-<%= product.id %>" class="home-modal">
  <div class="home-modal-content">
    <span class="home-modal-close-btn">&times;</span>
    <div class="home-modal-body">
       
      <div class="home-modal-image">
        <img src="../public/product_image/<%= product.image_url %>" alt="Product Image" id="home-modal-product-image" />
      </div>
      <div class="home-modal-details">
        <h3 id="home-modal-product-title"><%= product.name %></h3>
        <p id="home-modal-product-desc"><%= product.description %></p>
        <p id="home-modal-product-price">Rs. <%= product.price %></p>

        <button id="home-modal-add-to-cart-btn" class="home-modal-btn">Add to Cart</button>
        <a href="/login"><button id="home-modal-buy-now-btn" class="home-modal-btn">Buy Now</button></a>
      </div>
    </div>
    
  </div>
  
</div>
<% }) %>

