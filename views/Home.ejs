<section class="contact-section">
  <div class="contact-container">
    <div class="contact-left">
      <h2>Get In Touch</h2>
      <p>Discover pre-loved fashion treasures! Connect with us to find your perfect second-hand style at amazing prices</p>
    </div>
    <div class="contact-right">
      <form class="contact-form" style="max-width: 800px; margin: 30px auto;">
   
    <div class="contact-form-group">
      <label for="firstname" class="form-label">First Name</label>
      <input type="text" id="firstname" name="firstname" class="form-input" required />
    </div>

    <div class="contact-form-group">
      <label for="lastname" class="form-label">Last Name</label>
      <input type="text" id="lastname" name="lastname" class="form-input" required />
    </div>

    <div class="contact-form-group">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" class="form-input" required />
    </div>

    <div class="contact-form-group">
      <label for="message" class="form-label">Message</label>
      <textarea id="message" name="message" rows="5" class="form-textarea" required></textarea>
    </div>

    <div class="form-full-width btn-group-right">
      <button type="reset" class="small-btn discard-btn">Clear</button>
      <button type="submit" class="small-btn update-btn">Send Message</button>
    </div>
  </form>
    </div>
  </div>
</section>

